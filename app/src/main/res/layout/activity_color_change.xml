<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/color_change_textView_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/color_1" />

    <TextView
        android:id="@+id/color_change_textView_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/color_2" />

    <Button
        android:id="@+id/color_1_color_2_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/color_2"
        android:text="@string/purple_textViews"
        android:theme="@style/PurpleComponents" />

    <Button
        android:id="@+id/color_3_color_4_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/color_4"
        android:text="@string/red_and_orange_textViews"
        android:theme="@style/RedAndOrangeComponents" />

    <Button
        android:id="@+id/color_5_color_6_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/color_6"
        android:text="@string/green_textViews"
        android:theme="@style/GreenComponents" />

</LinearLayout>